<h3> <%= drug.name %> </h3>
<h3> <%= drug.drug_prescriptions.first.refill  %> </h3>

<div class="w3-container">
  <button onclick="document.getElementById('id01').style.display='block'" class="customize_button">Set Time</button>

  <div id="id01" class="w3-modal">
    <div class="w3-modal-content">
       <div class="w3-center">
        <span onclick="document.getElementById('id01').style.display='none'" class="w3-closebtn">&times;</span>
        <br></br>

        <p>Select a Time <input type="time" name="usr_time" id="time1">
            <p>Select a Time <input type="time" name="usr_time" id="time2">
              <p>Select a Time <input type="time" name="usr_time" id="time3">
                <br></br>
                  <input type="submit"></p>
                  <br></br>
        </div>
    </div>
  </div>
</div>

</div>
